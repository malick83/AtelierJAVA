<?xml version="1.0" encoding="UTF-8"?>
<web-app 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">
  <display-name>GestionDeStock</display-name>
  
    <servlet>
  	<servlet-name>Controller</servlet-name>
  	<servlet-class>com.allSafe.servlet.Controller</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>Controller</servlet-name>
  	<url-pattern>/</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>ControllerProduit</servlet-name>
  	<servlet-class>com.allSafe.servlet.ControllerProduit</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>ControllerProduit</servlet-name>
  	<url-pattern>/produits</url-pattern>
  </servlet-mapping>
  
  <jsp-config>

  <jsp-property-group>

    <url-pattern>*.jsp</url-pattern>

    <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>

  </jsp-property-group>

</jsp-config>
  
</web-app>